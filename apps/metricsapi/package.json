{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/npm"
    },
    {
      "src": "server.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "handle": "filesystem"
    },
    {
      "src": "/.*",
      "dest": "server.ts"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "scripts": {
    "build": "npm run build && nx build metricsapi --configuration=production",
    "start": "node server.ts"
  }
}