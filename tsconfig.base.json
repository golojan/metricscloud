{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2018",
    "jsx": "preserve",
    "module": "esnext",
    "esModuleInterop": true,
    "lib": ["es6", "esnext.asynciterable", "dom"],
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@metricsai/metrics-hocs": ["libs/metrics-hocs/src/index.ts"],
      "@metricsai/metrics-images": ["libs/metrics-images/src/index.ts"],
      "@metricsai/metrics-interfaces": ["libs/metrics-interfaces/src/index.ts"],
      "@metricsai/metrics-mail": ["libs/metrics-mail/src/index.ts"],
      "@metricsai/metrics-models": ["libs/metrics-models/src/index.ts"],
      "@metricsai/metrics-scholars": ["libs/metrics-scholars/src/index.ts"],
      "@metricsai/metrics-store": ["libs/metrics-store/src/index.ts"],
      "@metricsai/metrics-utils": ["libs/metrics-utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
